<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/activity_notification_item_isread"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#e65171"/>

    <TextView
        android:id="@+id/activity_notification_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#101010"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/activity_notification_item_isread"/>

    <TextView
        android:id="@+id/activity_notification_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#101010"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@id/activity_notification_item_title"/>
</RelativeLayout>